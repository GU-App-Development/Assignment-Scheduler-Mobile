<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <ImageButton
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/parking"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintRight_toLeftOf="@id/spot_name"/>

    <TextView
        android:id="@+id/spot_name"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/spot_price"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/spot_name"/>

    <Button
        android:id="@+id/select"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:text="@string/view"
        app:layout_constraintLeft_toRightOf="@id/spot_price"
        app:layout_constraintTop_toBottomOf="@id/spot_name"
        android:layout_margin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
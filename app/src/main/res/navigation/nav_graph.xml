<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_base"
    app:startDestination="@+id/class_fragment">

    <fragment
        android:id="@+id/class_fragment"
        android:name="com.app.parking.ClassesFragment"
        android:label="Classes"
        tools:layout="@layout/fragment_classes">
        <action
            android:id="@+id/action_class_to_task"
            app:destination="@+id/task_fragment" />
        <action
            android:id="@+id/action_class_to_calendar"
            app:destination="@+id/calendar_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tasks_fragment"
        android:name="com.app.parking.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">
        <argument
            android:name="class_id"
            android:defaultValue="1"
            app:argType="integer"/>
    </fragment>
    <fragment
        android:id="@+id/cal_fragment"
        android:name="com.app.parking.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar">
        <argument
            android:name="class_id"
            android:defaultValue="1"
            app:argType="integer"/>
    </fragment>

</navigation>